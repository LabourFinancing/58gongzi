<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>PayServlet</servlet-name>
		<servlet-class>com.chinaebi.pay.servlet.PayServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PayResultServlet</servlet-name>
		<servlet-class>com.chinaebi.pay.servlet.PayResultServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>QueryServlet</servlet-name>
		<servlet-class>com.chinaebi.pay.servlet.QueryServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RefundServlet</servlet-name>
		<servlet-class>com.chinaebi.pay.servlet.RefundServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AmtQueryServlet</servlet-name>
		<servlet-class>com.chinaebi.pay.servlet.AmtQueryServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>PayServlet</servlet-name>
		<url-pattern>/pay</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PayResultServlet</servlet-name>
		<url-pattern>/payResult</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>QueryServlet</servlet-name>
		<url-pattern>/query</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RefundServlet</servlet-name>
		<url-pattern>/refund</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AmtQueryServlet</servlet-name>
		<url-pattern>/amtQuery</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
